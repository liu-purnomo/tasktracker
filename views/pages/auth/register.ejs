<%- include('../../partials/auth-header') %>   
<div class="body d-flex p-0 p-md-2 p-xl-5">
    <div class="container-xxl">
        <div class="row g-0 border border-secondary rounded-3 mt-2 mt-md-0">
            <div class="col-lg-6 d-flex justify-content-center align-items-center  bg-secondary py-2 py-md-0">
                <div class="d-flex flex-column p-2">
                    <h1>Create Your Account</h1>
                    <div class="tab-content mt-4 mb-3">
                        <div class="tab-pane fade show active" id="Email">
                            <div class="card">
                                <div class="card-body p-4">
                                    <form action="" method="post">
                                        <div class="mb-3">
                                            <label class="form-label fs-6">Email address</label>
                                            <input name="email" type="email" class="form-control">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fs-6">Username</label>
                                            <input name="username" type="text" class="form-control">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fs-6">Password</label>
                                            <input name="password" type="password" class="form-control">
                                        </div>
                                        <button type="submit" class="btn btn-primary text-uppercase py-2 fs-5 w-100 mt-2">Create Account</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="text-primary" href="/" title="#">Already registered? <span class="text-primary text-decoration-underline">Log In</span></a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-flex justify-content-center align-items-center ">
                <div class="qr-block text-center">
                    <img src="images/task-tracker.jpg" alt="#" class="img-fluid my-4" width="400px">
                    <h4>Tracking Your Task</h4>
                </div>
            </div>
        </div> <!-- End Row -->
        
    </div>
</div>
<%- include('../../partials/auth-footer') %> 