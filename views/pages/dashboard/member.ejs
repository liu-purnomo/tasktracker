<%- include('../../partials/header') %>  
<%- include('../../partials/sidebar') %>  
<%- include('../../partials/body-header') %>  


<!-- Body: Body -->       
<div class="body d-flex py-lg-3 py-md-2">
    <div class="container-xxl">
        <div class="row align-items-center">
            <div class="border-0 mb-4">
                <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom flex-wrap">
                    <h3 class="h4 mb-0">Member List</h3>
                    <div class="col-auto d-flex w-sm-100 mt-2 mt-sm-0">
                        <button type="button" class="btn btn-dark btn-set-task w-sm-100" data-bs-toggle="modal" data-bs-target="#addemp"><i class="icofont-plus-circle me-2 fs-6"></i>Add Employee</button>
                    </div>
                </div>
            </div>
        </div> <!-- Row end  -->
        <div class="row clearfix g-3">
        <div class="col-sm-12">
            <div class="card mb-3">
                <div class="card-body">
                    <table id="myProjectTable" class="table table-hover align-middle mb-0" style="width:100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Gender</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(user => { %>
                                <tr>
                                    <td>
                                        <img class="avatar rounded-circle" src="images/xs/avatar1.svg" alt="">
                                        <span class="fw-bold ms-1"><%= user.firstName %> <%= user.lastName %></span>
                                    </td>
                                    <td>
                                        <a href="#"><%= user.User.dataValues.username %></a>
                                    </td>
                                    <td><a href="#"><%= user.User.dataValues.email %></a> </td>
                                    <td><a href="#"><%= user.gender %></a> </td>
                                    <td><a href="#"><%= user.User.dataValues.role %></a> </td>
                                    
                                     <td>
                                         <div class="btn-group" role="group" aria-label="Basic outlined example">
                                            <% if (user.User.dataValues.role !== "Manager") { %>
                                                <a class="btn btn-primary" href="/set-role?role=Manager&id=<%= user.User.dataValues.id %>">Set as Manager</a>
                                            <% } else if (user.User.dataValues.role !== "Staff") { %>
                                                <a class="btn btn-primary" href="/set-role?role=Staff&id=<%= user.User.dataValues.id %>">Set as Staff</a>
                                            <% } %>
                                         </div>
                                     </td>
                                 </tr>
                            <% }) %>
                            
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div><!-- Row End -->
    </div>
</div>

